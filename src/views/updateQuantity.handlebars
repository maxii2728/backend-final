<div class="container mt-5">
    <h1>Actualizar Cantidad del Producto</h1>
    <form action="/api/cart/{{cartId}}/products/{{productId}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="quantity">Nueva Cantidad:</label>
            <input type="number" id="quantity" name="quantity" min="1" value="{{currentQuantity}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Actualizar Cantidad individual</button>
    </form>
</div>